<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Submit Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="container">
    <h1>Submit your details</h1>

    <% if (success) { %>
      <div class="alert success"><%= success %></div>
    <% } %>

    <% if (errors && errors.length) { %>
      <div class="alert error">
        <ul>
          <% errors.forEach(function(e) { %>
            <li><%= e.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form action="/submit" method="POST" class="form">
      <label>
        Name
        <input type="text" name="name" value="<%= old.name ? old.name : '' %>" required maxlength="100" />
      </label>

      <label>
        Email
        <input type="email" name="email" value="<%= old.email ? old.email : '' %>" required />
      </label>

      <label>
        Password
        <input type="password" name="password" required minlength="6" />
      </label>

      <label>
        Message (optional)
        <textarea name="message" rows="4" maxlength="2000"><%= old.message ? old.message : '' %></textarea>
      </label>

      <button type="submit">Submit</button>
    </form>
  </main>
</body>
</html>
